<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yuanbao.record.mbp.mapper.OrderProductMapper">

    <select id="selectOrderProductList" resultType="com.yuanbao.record.mbp.mapper.entity.OrderProduct">
        SELECT *
        FROM order_product op
        WHERE op.deleted != '1'
        <if test="userOrderId != '' and userOrderId != null">
            AND (op.user_order_id = (#{userOrderId,jdbcType=BIGINT}))
        </if>
        <if test="productTitle != 'null'.toString() and productTitle != '' ">
            AND (op.product_title = (#{productTitle,jdbcType=VARCHAR}))
        </if>
        <if test="productSkusTitle != 'null'.toString() and productSkusTitle != '' ">
            AND (op.product_skus_title = (#{productSkusTitle,jdbcType=VARCHAR}))
        </if>
    </select>

    <select id="selectOrderListDateSearch" resultType="com.yuanbao.record.mbp.mapper.entity.OrderProduct">
        SELECT receiver,COUNT(*) as count_order_number,sum(number) as sum_product_number
        FROM user_order up
        WHERE up.deleted != '1'
        <if test="userOrderId != '' and userOrderId != null">
            AND (up.user_order_id = #{userOrderId,jdbcType=BIGINT}))
        </if>
        <choose>
            <when test="dateState == 2">
                and YEAR ( up.created_at )= YEAR (NOW())
            </when>
            <when test="dateState == 3 and specifiedTime1 != '' and specifiedTime2 != ''">
                and up.created_at between #{specifiedTime1} and #{specifiedTime2}
            </when>
            <otherwise>
                and DATE_FORMAT( up.created_at, '%Y%m' ) = DATE_FORMAT( CURDATE(), '%Y%m' )
            </otherwise>
        </choose>
        GROUP BY up.receiver
    </select>

    <insert id="insert" parameterType="com.yuanbao.record.mbp.mapper.entity.OrderProduct">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into order_product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userOrderId!=null">
                user_order_id,
            </if>
            <if test="productId!=null">
                product_id,
            </if>
            <if test="productSkusId!=null">
                product_skus_id,
            </if>
            <if test="productTitle!=null">
                product_title,
            </if>
            <if test="productSkusTitle!=null">
                product_skus_title,
            </if>
            <if test="number!=null">
                number
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userOrderId!=null">
                #{userOrderId,jdbcType=INTEGER},
            </if>
            <if test="productId!=null">
                #{productId,jdbcType=INTEGER},
            </if>
            <if test="productSkusId!=null">
                #{productSkusId,jdbcType=VARCHAR},
            </if>
            <if test="productTitle!=null">
                #{productTitle,jdbcType=VARCHAR},
            </if>
            <if test="productSkusTitle!=null">
                #{productSkusTitle,jdbcType=VARCHAR},
            </if>
            <if test="productTitle!=null">
                #{productTitle,jdbcType=VARCHAR},
            </if>
            <if test="productSkusTitle!=null">
                #{productSkusTitle,jdbcType=VARCHAR},
            </if>
            <if test="number!=null">
                #{number,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

</mapper>