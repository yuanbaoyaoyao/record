<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yuanbao.record.mbp.mapper.ProductApplyMapper">

    <select id="selectApplyListSearch" resultType="com.yuanbao.record.mbp.mapper.entity.ProductApply">
        SELECT *
        FROM product_apply pa
        WHERE pa.deleted != '1'
        <if test="userId != 'null'.toString() and userId != '' ">
            AND pa.user_id like concat ('%',#{pa.userID,jdbcType=VARCHAR},'%'))
        </if>
        <if test="productTitle != 'null'.toString() and productTitle != '' ">
            AND pa.product_title like concat ('%',#{pa.productTitle,jdbcType=VARCHAR},'%'))
        </if>
        <if test="productSkusTitle != 'null'.toString() and productSkusTitle != '' ">
            AND pa.product_skus_title like concat ('%',#{productSkusTitle,jdbcType=VARCHAR},'%'))
        </if>
    </select>

    <insert id="insert" parameterType="com.yuanbao.record.mbp.mapper.entity.ProductApply">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into product_apply
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId!=null">
                user_id,
            </if>
            <if test="productTitle!=null">
                product_title,
            </if>
            <if test="productSkusTitle!=null">
                product_skus_title,
            </if>
            <if test="productNumber!=null">
                product_number,
            </if>
            <if test="productDetail!=null">
                product_detail,
            </if>
            <if test="productState!=null">
                product_state,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId!=null">
                #{userId,jdbcType=INTEGER},
            </if>
            <if test="productTitle!=null">
                #{productTitle,jdbcType=VARCHAR},
            </if>
            <if test="productSkusTitle!=null">
                #{productSkusTitle,jdbcType=VARCHAR},
            </if>
            <if test="productNumber!=null">
                #{productNumber,jdbcType=INTEGER},
            </if>
            <if test="productDetail!=null">
                #{productDetail,jdbcType=VARCHAR},
            </if>
            <if test="productState!=null">
                #{productState,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

