<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yuanbao.record.mbp.mapper.AdminRoleMapper">

    <select id="selectRoleList" resultType="com.yuanbao.record.mbp.entity.AdminRole">
        SELECT *
        FROM admin_role ar
        WHERE ar.deleted != 1
        <if test="keyword != 'null'.toString() and keyword != '' ">
            AND admin_role.NAME like concat ('%',#{keyword,jdbcType=VARCHAR},'%')
        </if>
    </select>
    <insert id="insert" parameterType="com.yuanbao.record.mbp.entity.AdminRole">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into admin_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name!=null">
                name,
            </if>
            <if test="description!=null">
                description,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name!=null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="description!=null">
                #{description,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <update id="updateByPrimaryKey" parameterType="com.yuanbao.record.mbp.entity.AdminRole">
        update admin_role
        set name        = #{name,jdbcType=VARCHAR},
            description = #{description,jdbcType=VARCHAR}
        where id = #{id,jdbcType=BIGINT}
    </update>

</mapper>